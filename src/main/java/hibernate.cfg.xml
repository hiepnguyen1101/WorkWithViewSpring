<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.password">sinceY2k</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=demo</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <mapping class="com.gcs.rms.model.UserRole" />
        <mapping class="com.gcs.rms.model.PersistentLogins" />
        <mapping class="com.gcs.rms.model.Role" />
        <mapping class="com.gcs.rms.model.User" />
    </session-factory>
</hibernate-configuration>
